<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="110dp"

    android:layout_height="wrap_content"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_profissional_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_confeiteiro_home"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:elevation="10dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"/>

            <ProgressBar
                android:id="@+id/progressImg"
                style="style/Widget.DeviceDefault.Light.ProgressBar.Large"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center|center_vertical"
                android:layout_marginTop="14dp"
                android:gravity="center|center_vertical"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txt_confeiteiro_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/allerta"
                android:text="Bolo"
                android:textSize="17sp"
                android:elevation="10dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_below="@id/image_confeiteiro_home"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"/>

            <RatingBar
                android:id="@+id/rt_avaliacao_confeiteiro_home"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/allerta"
                android:text="cliente"
                android:textSize="18sp"
                android:numStars="5"
                android:stepSize="1"
                android:max="10"
                android:progressTint="@color/amarelo"
                style="?attr/ratingBarStyleSmall"
                android:layout_below="@id/txt_confeiteiro_home"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>