<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_gradient"
        android:fillViewport="true"
        tools:context=".CadastroClienteActivity">

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/layout_txt_nome_cliente"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:hint="Nome:"
                android:padding="0dp"
                android:textColorHint="@color/branco"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/branco"
                app:boxStrokeWidth="5px"
                app:errorTextAppearance="@style/error_appearance"
                app:hintTextAppearance="@style/HintTextStyle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView3">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txt_nome_cliente"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawablePadding="4dp"
                    android:elevation="10dp"
                    android:inputType="text"
                    android:padding="0dp"
                    android:textColor="@color/branco">

                </android.support.design.widget.TextInputEditText>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/layout_txt_sobrenome_cliente"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:hint="Sobrenome:"
                android:padding="0dp"
                android:textColorHint="@color/branco"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/branco"
                app:boxStrokeWidth="5px"
                app:errorTextAppearance="@style/error_appearance"
                app:hintTextAppearance="@style/HintTextStyle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_txt_nome_cliente">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txt_sobrenome_cliente"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawablePadding="4dp"
                    android:elevation="10dp"
                    android:inputType="text"
                    android:padding="0dp"
                    android:textColor="@color/branco">

                </android.support.design.widget.TextInputEditText>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/layout_txt_celular_cliente"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:hint="Celular:"
                android:padding="0dp"
                android:textColorHint="@color/branco"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/branco"
                app:boxStrokeWidth="5px"
                app:errorTextAppearance="@style/error_appearance"
                app:hintTextAppearance="@style/HintTextStyle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_txt_sobrenome_cliente">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txt_celular_cliente"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawablePadding="4dp"
                    android:elevation="10dp"
                    android:inputType="number"
                    android:padding="0dp"
                    android:textColor="@color/branco">

                </android.support.design.widget.TextInputEditText>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/layout_txt_cpf_cliente"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:hint="CPF:"
                android:padding="0dp"
                android:textColorHint="@color/branco"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/branco"
                app:boxStrokeWidth="5px"
                app:errorTextAppearance="@style/error_appearance"
                app:hintTextAppearance="@style/HintTextStyle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_txt_celular_cliente">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txt_cpf_cliente"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawablePadding="4dp"
                    android:elevation="10dp"
                    android:inputType="number"
                    android:padding="0dp"
                    android:textColor="@color/branco">

                </android.support.design.widget.TextInputEditText>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/layout_txt_dt_nascimento_cliente"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:hint="Data de Nascimento:"
                android:padding="0dp"
                android:textColorHint="@color/branco"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/branco"
                app:boxStrokeWidth="5px"
                app:errorTextAppearance="@style/error_appearance"
                app:hintTextAppearance="@style/HintTextStyle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_txt_cpf_cliente">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txt_dt_nascimento_cliente"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawablePadding="4dp"
                    android:elevation="10dp"
                    android:inputType="date"
                    android:padding="0dp"
                    android:textColor="@color/branco">

                </android.support.design.widget.TextInputEditText>
            </android.support.design.widget.TextInputLayout>


            <Spinner
                android:id="@+id/spn_sexo_cliente"
                style="@style/mySpinnerItemStyle"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/spinner_bg"
                android:hint="Sexo:"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                android:spinnerMode="dialog"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_txt_dt_nascimento_cliente">

            </Spinner>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/layout_txt_email_cliente"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:hint="E-mail:"
                android:padding="0dp"
                android:textColorHint="@color/branco"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/branco"
                app:boxStrokeWidth="5px"
                app:errorTextAppearance="@style/error_appearance"
                app:hintTextAppearance="@style/HintTextStyle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spn_sexo_cliente">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txt_email_cliente"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawablePadding="4dp"
                    android:elevation="10dp"
                    android:inputType="textEmailAddress"
                    android:padding="0dp"
                    android:textColor="@color/branco">

                </android.support.design.widget.TextInputEditText>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/layout_txt_senha_cliente"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:hint="Senha:"
                android:padding="0dp"
                android:textColorHint="@color/branco"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/branco"
                app:boxStrokeWidth="5px"
                app:errorTextAppearance="@style/error_appearance"
                app:hintTextAppearance="@style/HintTextStyle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_txt_email_cliente">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txt_senha_cliente"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawablePadding="4dp"
                    android:elevation="10dp"
                    android:inputType="textPassword"
                    android:padding="0dp"
                    android:textColor="@color/branco">

                </android.support.design.widget.TextInputEditText>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/layout_txt_confirma_senha_cliente"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:hint="Confirme a Senha:"
                android:padding="0dp"
                android:textColorHint="@color/branco"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/branco"
                app:boxStrokeWidth="5px"
                app:hintTextAppearance="@style/HintTextStyle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_txt_senha_cliente">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txt_confirma_senha_cliente"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawablePadding="4dp"
                    android:elevation="10dp"
                    android:inputType="textPassword"
                    android:padding="0dp"
                    android:textColor="@color/branco">

                </android.support.design.widget.TextInputEditText>
            </android.support.design.widget.TextInputLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="28dp"
                android:elevation="0dp"
                android:visibility="visible"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="85dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/img_cliente"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/add_foto" />

            </android.support.v7.widget.CardView>


            <ImageView
                android:id="@+id/img_add_foto_cliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="130dp"
                android:layout_marginTop="152dp"
                android:elevation="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/add" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/carregando"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edittext_bg"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/allerta"
            android:text="Aguarde..."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progressBar" />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
