<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:id="@+id/card_produto_home"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/layout_shadow_componente"
        android:layout_margin="10dp"


        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@drawable/borda_layout"
                android:id="@+id/layout_imagem_produto">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/image_produto_home"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/bolo"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <ProgressBar
                    android:id="@+id/progressImg"
                    style="@android:style/Widget.ProgressBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:layout_marginRight="6dp"
                    android:gravity="center|center_vertical"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/txt_produto_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/allerta"
                    android:text="Bolo de Chocolate"
                    android:layout_gravity="center"
                    android:textSize="17sp"
                    android:elevation="10dp"
                    android:textAlignment="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"/>

                <RatingBar
                    android:id="@+id/rt_avaliacao_produto_home"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/allerta"
                    android:text="cliente"
                    android:textSize="18sp"
                    android:numStars="5"
                    android:stepSize="0.5"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"

                    />

                <TextView
                    android:id="@+id/txt_produto_preco_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/allerta"
                    android:text="R$25,00"
                    android:textSize="15sp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"

                    android:layout_marginBottom="8dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



</android.support.constraint.ConstraintLayout>