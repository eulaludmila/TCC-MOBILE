<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="noBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="HintTextStyle" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/branco</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="HintTextStyle2" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/preto</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="mySpinnerItemStyle" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:textColor">@color/branco</item>
    </style>
    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">#ff5555</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="BottomNavigationTheme" parent="Base.Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="colorPrimary">@color/branco</item>
        <item name="android:textColorSecondary">@color/cinza_claro</item>
        <item name="android:textSize">2sp</item>
    </style>

    <style name="sacola" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">@color/branco</item>
        <item name="android:shadowColor">@color/colorPrimaryDark</item>
        <item name="android:background">@drawable/botao_adicionar_produto</item>
    </style>
    <style name="ToolbarTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:homeAsUpIndicator">@drawable/toolbar_voltar</item>
    </style>
    <style name="myTimePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/escuro</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


</resources>
